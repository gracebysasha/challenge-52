<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Трекер 52 недели творчества + Gemini AI</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap');
        body {
            font-family: 'Montserrat', sans-serif;
            background: #fdfbfb;
        }
        .week-card {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .week-card.active {
            background-color: #ec4899;
            color: white;
            transform: scale(1.05);
            box-shadow: 0 10px 15px -3px rgba(236, 72, 153, 0.3);
        }
        .progress-bar {
            transition: width 0.5s ease-in-out;
        }
        .ai-gradient {
            background: linear-gradient(135deg, #6366f1 0%, #a855f7 50%, #ec4899 100%);
        }
    </style>
</head>
<body class="p-4 md:p-8">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <header class="text-center mb-10">
            <h1 class="text-4xl font-bold text-gray-800 mb-2">52 НЕДЕЛИ ТВОРЧЕСТВА</h1>
            <p class="text-gray-500 italic text-lg">Ваш путь к мастерству в 2026 году</p>
            
            <!-- Progress Section -->
            <div class="mt-8 bg-white p-6 rounded-2xl shadow-xl border border-gray-100">
                <div class="flex justify-between items-end mb-2">
                    <span class="text-sm font-medium text-gray-600 uppercase tracking-wider">Прогресс года</span>
                    <span id="progress-text" class="text-3xl font-black text-pink-500 tracking-tighter">0%</span>
                </div>
                <div class="w-full bg-gray-100 rounded-full h-4 overflow-hidden mb-4">
                    <div id="progress-bar" class="progress-bar bg-pink-500 h-full w-0"></div>
                </div>
                <div class="flex items-center justify-center gap-2 text-gray-500 italic">
                    <span id="motivation-quote">"Каждый великий мастер когда-то был любителем."</span>
                </div>
            </div>
        </header>

        <!-- AI Assistant Section -->
        <section class="mb-10 bg-slate-900 rounded-2xl p-6 text-white shadow-2xl overflow-hidden relative">
            <div class="absolute top-0 right-0 p-4 opacity-10">
                <svg width="100" height="100" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2L14.85 8.65L22 12L14.85 15.35L12 22L9.15 15.35L2 12L9.15 8.65L12 2Z"/></svg>
            </div>
            
            <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
                <span>Творческий помощник Gemini</span>
                <span class="text-xs bg-pink-500 px-2 py-1 rounded-full uppercase">AI Power</span>
            </h2>

            <div class="space-y-4">
                <div class="flex flex-col md:flex-row gap-3">
                    <input type="text" id="creative-type" placeholder="Чем вы занимаетесь? (напр. фото, стихи, дизайн)" 
                           class="flex-1 bg-slate-800 border border-slate-700 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-pink-500">
                    <button onclick="generateIdea()" id="idea-btn" class="ai-gradient px-6 py-3 rounded-xl font-bold hover:opacity-90 transition transform active:scale-95 flex items-center justify-center gap-2">
                        <span>✨ Получить идею недели</span>
                    </button>
                </div>
                
                <div id="ai-response-container" class="hidden animate-fade-in">
                    <div class="bg-slate-800/50 border border-slate-700 p-4 rounded-xl">
                        <p id="ai-response-text" class="text-slate-200 leading-relaxed"></p>
                    </div>
                </div>

                <button onclick="getAIAdvice()" class="text-sm text-slate-400 hover:text-pink-400 transition flex items-center gap-1">
                    <span>✨ Проанализировать мой прогресс и дать совет</span>
                </button>
            </div>
        </section>

        <!-- Grid -->
        <div id="weeks-grid" class="grid grid-cols-4 sm:grid-cols-6 md:grid-cols-8 lg:grid-cols-10 gap-3">
            <!-- Weeks will be generated by JS -->
        </div>

        <!-- Footer Info -->
        <footer class="mt-12 text-center text-gray-400 text-sm border-t pt-6 pb-10">
            <p>Публикуй работу каждое воскресенье с хештегом <span class="text-pink-500 font-semibold">#52недели_творчества</span></p>
            <div class="flex justify-center gap-6 mt-4">
                <button onclick="resetTracker()" class="underline hover:text-red-400 transition">Сбросить прогресс</button>
            </div>
        </footer>
    </div>

    <script>
        const apiKey = ""; // API key is handled by the environment
        const grid = document.getElementById('weeks-grid');
        const progressText = document.getElementById('progress-text');
        const progressBar = document.getElementById('progress-bar');
        const quoteEl = document.getElementById('motivation-quote');
        const aiContainer = document.getElementById('ai-response-container');
        const aiText = document.getElementById('ai-response-text');
        const ideaBtn = document.getElementById('idea-btn');

        const quotes = [
            "Отличное начало!",
            "Творчество требует мужества.",
            "Ты создаешь нечто прекрасное!",
            "Уже виден прогресс!",
            "Половина пути — это только начало.",
            "Твое искусство важно!",
            "Держи темп, ты молодец!",
            "Почти финишная прямая!",
            "Горжусь твоим упорством!"
        ];

        let completedWeeks = JSON.parse(localStorage.getItem('creative_weeks_2026')) || [];

        async function callGemini(prompt) {
            const url = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;
            
            const payload = {
                contents: [{ parts: [{ text: prompt }] }],
                systemInstruction: { 
                    parts: [{ text: "Ты — креативный коуч для участников марафона '52 недели творчества'. Твоя цель — вдохновлять, давать конкретные задания и поддерживать. Отвечай кратко, дружелюбно и на русском языке." }] 
                }
            };

            let delay = 1000;
            for (let i = 0; i < 5; i++) {
                try {
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });
                    if (!response.ok) throw new Error('API Error');
                    const result = await response.json();
                    return result.candidates?.[0]?.content?.parts?.[0]?.text;
                } catch (e) {
                    if (i === 4) throw e;
                    await new Promise(resolve => setTimeout(resolve, delay));
                    delay *= 2;
                }
            }
        }

        async function generateIdea() {
            const type = document.getElementById('creative-type').value || "творчество";
            ideaBtn.disabled = true;
            ideaBtn.innerText = "✨ Думаю...";
            
            try {
                const prompt = `Предложи одну конкретную и необычную идею для работы на этой неделе. Направление: ${type}. Объясни, почему это будет полезно для развития навыка.`;
                const response = await callGemini(prompt);
                
                aiText.innerText = response;
                aiContainer.classList.remove('hidden');
            } catch (e) {
                aiText.innerText = "Произошла ошибка при связи с ИИ. Попробуйте позже.";
                aiContainer.classList.remove('hidden');
            } finally {
                ideaBtn.disabled = false;
                ideaBtn.innerText = "✨ Получить идею недели";
            }
        }

        async function getAIAdvice() {
            const weekCount = completedWeeks.length;
            const prompt = `Участник выполнил ${weekCount} недель из 52. Дай короткий мотивирующий совет, исходя из этого прогресса. Если мало недель — поддтолкни, если много — похвали. Ссылайся на цифру ${weekCount}.`;
            
            aiText.innerText = "Анализирую ваши успехи...";
            aiContainer.classList.remove('hidden');
            
            try {
                const response = await callGemini(prompt);
                aiText.innerText = response;
            } catch (e) {
                aiText.innerText = "Не удалось получить совет от ИИ.";
            }
        }

        function createGrid() {
            grid.innerHTML = '';
            for (let i = 1; i <= 52; i++) {
                const card = document.createElement('div');
                card.className = `week-card cursor-pointer border-2 border-gray-100 rounded-xl p-3 text-center font-bold text-gray-400 hover:border-pink-200 flex items-center justify-center aspect-square bg-white shadow-sm`;
                if (completedWeeks.includes(i)) card.classList.add('active');
                
                card.innerText = i;
                card.onclick = () => toggleWeek(i);
                grid.appendChild(card);
            }
            updateProgress();
        }

        function toggleWeek(num) {
            if (completedWeeks.includes(num)) {
                completedWeeks = completedWeeks.filter(n => n !== num);
            } else {
                completedWeeks.push(num);
            }
            localStorage.setItem('creative_weeks_2026', JSON.stringify(completedWeeks));
            createGrid();
        }

        function updateProgress() {
            const percent = Math.round((completedWeeks.length / 52) * 100);
            progressText.innerText = `${percent}%`;
            progressBar.style.width = `${percent}%`;
            
            const quoteIndex = Math.min(Math.floor(percent / 11), quotes.length - 1);
            if (completedWeeks.length > 0) {
                quoteEl.innerText = `"${quotes[quoteIndex]}"`;
            }
        }

        function resetTracker() {
            const modal = confirm('Вы уверены, что хотите сбросить весь прогресс? Это нельзя будет отменить.');
            if (modal) {
                completedWeeks = [];
                localStorage.removeItem('creative_weeks_2026');
                createGrid();
                aiContainer.classList.add('hidden');
            }
        }

        window.onload = createGrid;
    </script>
</body>
</html>
